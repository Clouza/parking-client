{
  "server": {
    "url": "http://your-server:5000",
    "timeout": 10
  },
  "camera": {
    "id": "pi_camera_001",
    "resolution": [1920, 1080],
    "format": "RGB888"
  },
  "heartbeat": {
    "interval": 10
  },
  "entrance_detection": {
    "enabled": true,
    "cooldown": 5,
    "motion_threshold": 1000
  },
  "exit_detection": {
    "enabled": true,
    "cooldown": 5,
    "motion_threshold": 1000,
    "storage_dir": "exit_captures",
    "max_storage_days": 7,
    "gate_duration": 8
  },
  "entrance_camera": {
    "enabled": true,
    "device_id": 0,
    "resolution": [1920, 1080],
    "format": "RGB888",
    "controls": {}
  },
  "exit_camera": {
    "enabled": true,
    "device_id": 1,
    "resolution": [1920, 1080],
    "format": "RGB888",
    "controls": {}
  },
  "detection": {
    "confidence_threshold": 0.5,
    "enable_preprocessing": true,
    "roi": {
      "x": 0,
      "y": 0,
      "width": 1920,
      "height": 1080
    }
  },
  "gpio": {
    "gate_pin": 18,
    "led_pin": 16,
    "button_pin": 12,
    "gate_duration": 5
  },
  "exit_gpio": {
    "gate_pin": 22,
    "led_pin": 24,
    "button_pin": 26,
    "gate_duration": 8
  },
  "storage": {
    "directory": "captures",
    "max_days": 7
  },
  "parking_monitor": {
    "enabled": true,
    "areas": ["area1", "area2"],
    "peak_hours": [7, 8, 17, 18, 19],
    "peak_interval": 15,
    "off_peak_interval": 60,
    "storage_dir": "parking_captures",
    "cache_dir": "cache",
    "max_storage_days": 3
  },
  "web_dashboard": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080
  },
  "command_handler": {
    "enabled": true,
    "polling_interval": 10,
    "status_interval": 300
  },
  "security": {
    "api_key_file": "/opt/parking-client/api.key",
    "ssl_cert_file": "/opt/parking-client/certs/client.crt",
    "use_https": true,
    "ssl_verify": false,
    "rate_limit_requests": 100,
    "rate_limit_window": 60,
    "max_image_size": 10485760,
    "audit_log_file": "/var/log/parking-client/security_audit.log"
  },
  "error_recovery": {
    "max_camera_retries": 5,
    "max_network_retries": 10,
    "max_service_restarts": 3,
    "recovery_interval": 30,
    "check_interval": 60,
    "memory_threshold": 85,
    "disk_threshold": 90
  },
  "monitoring": {
    "database": "/opt/parking-client/monitoring.db",
    "port": 8081,
    "host": "0.0.0.0"
  },
  "ota_updates": {
    "server_url": "https://your-update-server.com",
    "check_interval": 3600,
    "auto_update": false,
    "backup_before_update": true,
    "install_dir": "/opt/parking-client"
  },
  "backup": {
    "backup_dir": "/opt/parking-client/backups",
    "retention_days": 30,
    "max_local_backups": 10,
    "daily_backup_time": "02:00",
    "weekly_backup_day": "sunday",
    "remote_backup_enabled": false,
    "remote_backup_url": ""
  },
  "image_processing": {
    "jpeg_quality": 85,
    "max_resolution": [1920, 1080],
    "enable_compression": true,
    "detection_size": [640, 480],
    "enable_preprocessing": true,
    "batch_size": 10,
    "max_workers": 2
  },
  "batch_processing": {
    "batch_size": 10,
    "processing_interval": 60,
    "max_queue_size": 100,
    "max_image_age": 3600
  },
  "memory_management": {
    "warning_threshold": 80,
    "critical_threshold": 90,
    "cleanup_threshold": 85,
    "check_interval": 30
  },
  "health_monitoring": {
    "check_interval": 60,
    "alert_interval": 300,
    "cpu_threshold": 80,
    "memory_threshold": 85,
    "disk_threshold": 90,
    "temperature_threshold": 75,
    "services": ["parking-camera"]
  },
  "logging": {
    "level": "INFO",
    "file": "camera_client.log"
  }
}